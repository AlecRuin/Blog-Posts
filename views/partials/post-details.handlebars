<section class="container-lg w-75 h-auto start-50 bg-white text-dark m-5 rounded shadow">
  <div class="text-primary fw-bold" style="padding-top: 18px;">{{user.username}}</div>
  <div style="margin-bottom: 27px;" >{{format_date createdAt}}</div>
  <div style="padding-bottom: 25px;" class="fs-5 border border-5 rounded border-light bg-light text-wrap">{{message}}</div>
  {{#if (equalto user_loggedIn user_id)}}
  <form class="delete-post-form" id={{id}}>
      <input value="Delete" type="submit">
  </form>
  {{/if}}
{{#each replies as |reply-deets|}}
    <div class="text-primary fw-bold">{{user.username}}</div>
    <div style="margin-bottom: 10px;" >{{format_date createdAt}}</div>
    <div 
    {{#if (equalto user_loggedIn user.id)}}
    style="padding-bottom: 15px;"
    {{else}}
    style="padding-bottom: 25px;"
    {{/if}}
     class="fs-7">{{message}}</div> 
    {{#if (equalto user_loggedIn user.id)}}
    <form class="delete-reply-form pb-5" id={{id}}>
      <input value="Delete" type="submit">
    </form>
    {{/if}}
{{/each}}

  {{#if LoggedIn}}
  <form class="reply-form"id={{id}}>
        <textarea name="blog-content" id="blog-content" cols="30" rows="5"></textarea>
        <input value="Reply" type="submit">
  </form>
  {{/if}}
</section>